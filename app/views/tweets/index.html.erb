<div class="container">
  <div class="row">

    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <% if user_signed_in? %>
            <h5 class="card-title">Your Account</h5>
            <p class="card-text"><%= link_to current_user.username, user_path(current_user.username) %></p>
          <% else %>
            <p class="card-text"><%= link_to "Sign up now", signup_path %></p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <% if user_signed_in? %>
        <center><%= link_to 'New Tweet', new_tweet_path %></center>
      <% end %>
      <div class="list-group">
        <% @tweets.each do |tweet| %>
          <%= link_to tweet, class: "list-group-item list-group-item-action flex-column align-items-start" do %>
            <h5 class="list-group-item-heading"><%= tweet.user.username %></h5>
            <p class="list-group-item-text"><%= tweet.content %></p>

          <% end %>
        <% end %>
      </div>
    </div>

  </div>
</div>
