<!DOCTYPE html>
<html>
  <head>
    <title>One Month Rails Projects</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <%= link_to "One Month Rails", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <%= link_to "Home", root_path, class: "nav-item nav-link active" %>
            <%= link_to "About", about_path, class: "nav-item nav-link"  %>
            <%= link_to "Contact", "#", class: "nav-item nav-link" %>
            <% if user_signed_in? %>
                <%= link_to "Log out", signout_path, method: :delete, class: "nav-item nav-link"%>
            <% else %>
                <%= link_to "Sign in", signin_path, class: "nav-item nav-link" %>
                <%= link_to "Sign up", signup_path, class: "nav-item nav-link" %>
            <% end %>
          </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert alert-info #{name}") %>
    <% end %>

    <!-- Page Content -->
    <%= yield %>

    <!-- Footer -->
    <footer class="small text-muted">
      <div class="container">
        <hr>
        <center>
          <p>Â© 2016 One Month</p>
        </center>
      </div>
    </footer>

  </body>
</html>
